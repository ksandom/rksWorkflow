#!/bin/bash
# Creates timelapses based on a queue.
# Usage:
#   $0

workerID=$(hostname)-$$
workderDir="queue/workers/$workerID"
doneDir="queue/done"

mkdir -p "queue/src"
mkdir -p "queue/done"

function getNextJob
{
    cd queue/src
    ls -1 | sort | head -n 1
    cd ../..
}

function takeJob
{
    local jobName="$1"

    mkdir -p "$workerDir"
    mv -v queue/src/"$jobName" "$workderDir"

    sleep 0.2

    if [ -e "queue/$workerID/$jobName" ]; then
        echo "Job $jobName is ours."
        return 0
    else
        echo "Job $jobName has been taking by someone else."
        return 1
    fi
}

function doJob
{
    local jobName="$1"
    local jobFile="$workderDir/$jobName"

    pwd

    . "$jobFile"

    timelapse "$fileIn" "$whichFrameNumberToTake" "$symlink"

    mv -v "$jobFile" "$doneDir"
}

echo "Waiting for jobs."
while sleep 0.5; do
    job="$(getNextJob)"

    if [ "$job" != '' ]; then
        if takeJob "$job"; then
            doJob "$job"
        fi
    fi
done
